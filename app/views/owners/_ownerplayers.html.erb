
<h1>Roster</h1>
<table class="tablesorter tablesorter-blue">
<thead>
  <tr>
    <th colspan= "8">Batters</th>
  </tr>
</thead>
  <thead>
    <tr>
      <th>First</th>
      <th>Last</th>
      <th>Team</th>
      <th>POS</th>
      <th>ESPN Rank</th>
      <th>MLB Rank</th>
      <th>CBS Rank</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @batters.each do |player| %>
      <tr>
        <td><%= player[:first_name] %></td>
        <td><%= player[:last_name] %></td>
        <td><%= player.battings[0].mlbteam[:abbr] %></td>
        <td><%= player.positions[0][:pos]%></td>
        <td><%= player.player_ranking[:espn] unless player.player_ranking.blank? %></td>
        <td><%= player.player_ranking[:mlb] unless player.player_ranking.blank? %></td>
        <td><%= player.player_ranking[:cbs] unless player.player_ranking.blank? %>
        </td>
        <td><%= link_to 'Show', player_path(player) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<table class="tablesorter tablesorter-blue">
<thead>
  <tr>
    <th colspan= "8">Pitchers</th>
  </tr>
</thead>
<thead>
    <tr>
      <th>First</th>
      <th>Last</th>
      <th>Team</th>
      <th>POS</th>
      <th>ESPN Rank</th>
      <th>MLB Rank</th>
      <th>CBS Rank</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @pitchers.each do |player|%>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= player.pitchings[0].mlbteam.abbr %></td>
        <td><%= player.positions[0][:pos]%></td>
        <td><%= player.player_ranking[:espn] unless player.player_ranking.blank? %> </td>
        <td><%= player.player_ranking[:mlb] unless player.player_ranking.blank? %></td>
        <td><%= player.player_ranking[:cbs] unless player.player_ranking.blank? %>
        </td>
        <td><%= link_to 'Show', player_path(player) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
