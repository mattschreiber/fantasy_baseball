
<%= form_for(@player, html: {role: "form"}) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
  <div class="col-xs-3">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, class: "form-control"%>
  </div>
  </div>

  <div class="row">
  <div class="col-xs-3">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  </div>
  <div class="row form-inline", style="margin-top: 10px; margin-bottom: 10px">
  <div class="col-xs-3">
    <%= label_tag "Available" %>
    <%= f.check_box :avail, class: "form-control"%>
  </div>
  </div>
  <div class="row", style="margin-top: 10px; margin-bottom: 10px">
  <div class="col-xs-3">
    <%= label_tag "Owner" %>
    <%= f.collection_select(:owner_id, Owner.where(active: true), :id, :name, {include_blank: "Select Owner ..."}, {class: "form-control"}) %>
  </div>
  </div>

  <div class="row">
  <div class="col-xs-3">
  <div class="actions">
    <%= f.submit 'Submit', class: "btn btn-default form-control" %>
  </div>
</div>
</div>
<% end %>
