<h1>Batters</h1>

<table id="myTable" class="tablesorter tablesorter-blue">
  <thead>
    <tr>
      <th>Pos Rank</th>
      <th>ESPN Rank</th>
      <th>First</th>
      <th>Last</th>
      <th>Age</th>
      <th>Team</th>
      <th>Runs</th>
      <th>Home Runs</th>
      <th>RBIs</th>
      <th>SB</th>
      <th>BA</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each_with_index do |player, index| %>
      <tr>
        <td><%= index + 1 %>
        <td><%= player.player_ranking[:espn] unless player.player_ranking.blank? %> 
        </td>
        <td><%= player[:first_name] %></td>
        <td><%= player[:last_name] %></td>
        <td><%= age player[:birthday] %></td>
        <td><%= player.battings[0].mlbteam[:abbr] %></td>
        <td><%= player.battings[0][:runs] %></td>
        <td><%= player.battings[0][:hr] %></td>
        <td><%= player.battings[0][:rbi]%></td>
        <td><%= player.battings[0][:sb]%></td>
        <td><%= player.battings[0][:average]%></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $("#myTable").tablesorter({
     widgets: ['zebra'],
     sortList: [[0,0]],
     sortRestart : true,
     sortInitialOrder: 'desc',
   });
  
</script>
